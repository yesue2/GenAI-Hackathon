<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendCourse2">

    <TextView
        android:id="@+id/recommended_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="여행 코스 추천2"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        ></TextView>

    <TextView
        android:id="@+id/course2_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="첫째날"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/recommended_main_title"
        ></TextView>

    <TextView
        android:id="@+id/course2_morning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오전"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/course2_day"
        ></TextView>
    <TextView
        android:id="@+id/course2_afternoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오후"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/course2_morning"
        ></TextView>

    <Button
        android:id="@+id/course2_nextbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next_button"
        app:layout_constraintBottom_toBottomOf="parent"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>