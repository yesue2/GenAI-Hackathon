<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="여행 코스 추천"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <LinearLayout
        android:id="@+id/mainWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        >
        <LinearLayout
            android:id="@+id/content_wrapper_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/title_number_1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_weight="1"></TextView>

            <ImageView
                android:id="@+id/thumbnail_image_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/button_rounded_area"
                android:layout_weight="1"></ImageView>

            <LinearLayout
                android:id="@+id/text_wrapper_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="99"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommended_title_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="근처공원"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/recommended_subtitle_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#걷기좋은 #가족끼리"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content_wrapper_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/title_number_2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_weight="1"></TextView>

            <ImageView
                android:id="@+id/thumbnail_image_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/button_rounded_area"
                android:layout_weight="1"></ImageView>

            <LinearLayout
                android:id="@+id/text_wrapper_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="99"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommended_title_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="맛집식당"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/recommended_subtitle_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#갈치 #백반 #한식"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>